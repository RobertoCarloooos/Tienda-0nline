 {% extends "articles/articleBase.html.twig"%}

 {% block contenido%}
            <div class="container">
                <div class="row">
                    <div class="col text-center"><h2>{{article.name}} PRECIO : {{article.price}} </h2></div>
                </div>
                <div class="row">
                    <div class="col">
                        <img src="{{article.image}}">
                    </div>
                    <div class="col">
                        <div class="row">
                            <div class="col">{{article.description}}</div>
                        </div>
                        <div class="row">
                            <ul>           
                                {% for category in article.categories %}
                                <li>{{category.type}}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            {% endblock %}
