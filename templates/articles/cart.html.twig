{% extends "articles/articleBase.html.twig" %}

{% block contenido %}
<h2>Carrito de Compras</h2>
{% if articles is empty %}
    <p>No hay artículos en el carrito.</p>
{% else %}
    <div class="row row-cols-1 row-cols-md-2">
        {% for article in articles %}
            <div class="col mb-4">
                <div class="card" style="width: 18rem;">
                    <img src="{{ article.image }}" class="card-img-top" alt="{{ article.name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.name }}</h5>
                        <p class="card-text">{{ article.description }}</p>
                        <p class="card-text">{{ article.price }}€</p>
                        <form action=" {{ path('remove_from_cart', {'id': article.id}) }} " method="post" style="display: inline;">
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </form>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
<a href="{{ path('listArticle') }}" class="btn btn-secondary mt-3">Volver a la tienda</a>
{% endblock %}
