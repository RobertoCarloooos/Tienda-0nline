{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background-color: #f8f9fa;
        }
        .card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }
        .card-header {
            background-color: #343a40;
            color: white;
            border-radius: 10px 10px 0 0;
        }
        .form-control {
            border-radius: 50px;
            margin-top: 10px; 
        }
        .btn-primary {
            border-radius: 50px;
            background: linear-gradient(45deg, #007bff, #6610f2);
            margin-top: 20px; 
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="card">
        <div class="card-header text-center">
            <h3><i class="fas fa-user-circle"></i> Inicio de sesión</h3>
        </div>
        <div class="card-body">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="alert alert-info">
                        Has iniciado sesión como {{ app.user.userIdentifier }}, 
                        <a href="{{ path('app_logout') }}" class="alert-link">Cerrar sesión</a>
                    </div>
                {% endif %}

                <div class="form-group">
                    <label for="inputUsername"><i class="fas fa-user"></i> Username</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
                </div>
                <div class="form-group">
                    <label for="inputPassword"><i class="fas fa-lock"></i> Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-lg btn-primary btn-block" type="submit">
                    <i class="fas fa-sign-in-alt"></i> INICIAR
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}

